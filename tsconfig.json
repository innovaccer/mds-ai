{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "jsx": "react",
    "module": "ES2022",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["es6", "es7", "es2017", "dom"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["core/*"]
    }
  },
  "exclude": ["dist", "build", "node_modules", ".github"]
}

