{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "jsx": "react",
    "module": "ES6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["es6", "es7", "es2017", "dom"],
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  
  "exclude": ["dist", "build", "node_modules", ".github", "figma", "jest.config.ts"]
}
